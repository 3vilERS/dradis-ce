<% if @search.results.any? %>
  <div class="table">
    <table id="tbl-search" class="table">
      <tbody>
        <% search.results.each do |data| %>
          <tr>
            <td>
              <%= render "search/results/#{data.class.name.downcase}", row: data %>
            </td>
          </tr>
        <% end %>
       <tfoot>
         <tr>
           <td><%= paginate @search.results %></td>
         </tr>
       </tfoot>
    </table>
  </div>
<% else %>
  <div class="clearfix"></div>
  <div class="alert alert-block alert-info">
    <p>No matches found!</p>
  </div>
<% end %>
